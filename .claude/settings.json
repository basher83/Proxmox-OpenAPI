{
    "permissions": {
        "allow": [
            "Bash(mkdir:*)",
            "Bash(uv:*)",
            "Bash(fd:*)",
            "Bash(mv:*)",
            "Bash(rg:*)",
            "Bash(eza:*)",
            "Bash(npm:*)",
            "Bash(ls:*)",
            "Bash(cp:*)",
            "Write",
            "Edit",
            "Bash(chmod:*)",
            "Bash(touch:*)"
        ],
        "deny": []
    },
    "hooks": {
        "PreToolUse": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run .claude/hooks/pre_tool_use.py"
                    }
                ]
            }
        ],
        "PostToolUse": [
            {
                "matcher": "",
                "hooks": [
                    {
                        "type": "command",
                        "command": "uv run .claude/hooks/post_tool_use.py"
                    }
                ]
            }
        ]
    }
}